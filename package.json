{
  "name": "random-simulation",
  "productName": "Random Simulation",
  "version": "1.0.0",
  "description": "Simulate Anything",
  "main": "main.js",
  "author": "RandomSimulation",
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "dist": "electron-builder --win nsis",
    "dist:win": "electron-builder --win nsis",
    "dist:linux": "electron-builder --linux AppImage deb",
    "icons:win": "npx png-to-ico assets/icon.png > assets/icon.ico",
    "icons:mac": "npx icon-gen -i assets/icon.png -o assets --icns",
    "start:nogpu": "electron --disable-gpu ."
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^29.3.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourname.randomsimulation",
    "asar": true,
    "publish": [
      "never"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "index.html",
      "renderer.js",
      "main.js",
      "models/**/*",
      "vendor/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "models/",
        "to": "models",
        "filter": [
          "**/*"
        ]
      }
    ],
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "executableName": "random-simulation",
      "maintainer": "RandomSimulation",
      "icon": "assets/icon.png",
      "synopsis": "Simulate Anything with an Ollama backend"
    },
    "deb": {
      "priority": "optional",
      "maintainer": "RandomSimulation",
      "description": "Random Simulation â€“ Electron app using Ollama"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  }
}
